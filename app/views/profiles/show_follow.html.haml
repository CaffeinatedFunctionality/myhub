- provide(:title, @title)
.row
  %aside.span4
    %section
      %img.avatar{:src => current_user.avatar(:thumb), class: 'th'}
      %h1= @user.username
      %span= link_to "view my profile", @user
      %span
        %b Posts:
        = @user.postings.count
    %section
      = render 'stats'
      - if @users.any?
        .user_avatars
          - @users.each do |user|
            %img.avatar{:src => @user.avatar(:thumb), class: 'th'}
  .span8
    %h3= @title
    - if @users.any?
      %ul.users
        = render @users
      = will_paginate